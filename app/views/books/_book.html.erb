<tr>
  <td class="">
    <%= link_to user_path(book.user) do %>
      <%= attachment_image_tag book.user, :profile_image, fallback: "img/no_image.png", class:"field", size: "40x40" %>
    <% end %>
  </td>

  <td class=""><%= link_to book.title, book_path(book.id) %></td>

  <td class=""><%= book.body %></td>

  <td class="">
    コメント数:<%= @book.book_comments.count %>
  </td>

  <td id="likes_buttons_<%= book.id %>">
    <%= render 'books/like', book: book %>
  </td>
</tr>
