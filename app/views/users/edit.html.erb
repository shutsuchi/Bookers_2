<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>User Info</h2>
      <p></p>
      <%= form_for(@user) do |f| %>
          <div class="form-group has-icon">
              <label class="field">Name</label><br />
              <%= f.text_field :name, placeholder:"名前"%>
          </div>

          <div class="form-group has-icon">
              <label class="">Image</label><br />
              <%= f.attachment_field :profile_image %>
          </div>

          <div class="form-group has-icon">
            	<lavel class="">Introduction</lavel><br />
            	<%= f.text_area :introduction, placeholder:"自己紹介文" %>
          </div>

          <div class="field actions">
          <%= f.submit "Update User", class:"btn btn-primary"  %>
          </div>
      <% end %>
      <div>
        <div class="row book-edit-select">
          <div>
            <%=link_to 'Back', user_path(current_user) %>
          </div>
        </div>
    </div>
    </div>
  </div>
</div>
