<body>
	<div class="container">
		<div class="row">
			<%= render 'common', user: current_user, book: @book %>
			<div class="col-xs-9">
				<h2>Books</h2>
					<div>
						<table>
							<tr>
								<th></th>
								<th>Title</th>
								<th>Opinion</th>
								<th></th>
							</tr>
							<% @user.books.each do |book| %>
							<tr>
								<td class="user-index">
									<%= link_to user_path(book.user.id) do %>
									<%= attachment_image_tag @user, :profile_image, fallback: "img/no_image.png", class:"field", size: "40x40" %>
									<% end %>
								</td>
								<td class="user-index"><%= book.title %></td>
								<td class="user-index"><%= book.body %></td>
								<td></td>
							</tr>
							<% end %>
						</table>
					</div>
				</div>
			</div>
		</div>
</body>


