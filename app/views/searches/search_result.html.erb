<div class="container">
  <div class="row">
    <h5>検索結果</h5>
    <hr/>
    <table class="table">
      <thead>
        <% if @option == "user_search" %>
          <tr>
            <th class="active"></th>
            <th class="active">Name</th>
            <th class="active">Introduction</th>
            <th class="active">To details</th>
          </tr>
          <% @users.each do |user| %>
          <tr>
            <th><%= attachment_image_tag user, :profile_image %></th>
            <th><%= user.name %></th>
            <th><%= user.introduction %></th>
            <th><%= link_to 'Show', user_path(user) %></th>
          </tr>
          <% end %>
        <% else %>
          <tr>
            <th class="active">Title</th>
            <th class="active">Opinion</th>
            <th class="active">To details</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <th><%= book.title %></th>
            <th><%= book.body %></th>
            <th><%= link_to 'Show', book_path(book) %></th>
          </tr>
          <% end %>
        <% end %>
      </thead>
    </table>
  </div>
</div>
